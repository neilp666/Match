<!DOCTYPE html>
<html>
<head>
  <title>Match</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

  <% if current_user %>
  <nav id="myNavmenu" class="navmenu navmenu-default navmenu-fixed-left offcanvas" role="navigation">
      <ul class="nav navmenu-nav">
        <li class="active"><a href="#"><i class="fa fa-users"></i> Discover</a></li>
        <li class="active"><a href="#"><i class="fa fa-heart"></i> Matches</a></li>
        <li><%=link_to 'sign_out', method: :delete do %><i class="fa fa-cog"></i> Log out <% end %>
        </li>
      </ul>
</nav>
<div class="navbar navbar-default navbar-fixed-top">
  <button type="button" class="navbar-toggle button-nav" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body">
  <i class="fa fa-cog"></i>
   </button>

  <button type="button" class="navbar-toggle button-nav pull-right" data-toggle="offcanvas" data-target="#myNavMenu" data-canvas="body">
  <i class="fa fa-heart"></i>
  </button>


</div>

<% else %>

<a class="navbar-brand" href="#">
  <%= image_tag "logo_white.png", alt: "Tinstuk Logo", class: "logo-brand" %>
</a>

<% end %>

<%= yield %>


<script type="text/javascript">

$("#tinderslide").jTinder({
    onDislike: function (item) {
        //alert('Dislike image ' + (item.index()+1));
    },
    onLike: function (item) {
        //alert('Like image ' + (item.index()+1));
        var myId = $("#tinderslide > ul li").last().attr("id");
        $("#user_" myId)[0].click();
    },
    animationRevertSpeed: 200,
    animationSpeed: 400,
    threshold: 1,
    likeSelector: '.like',
    dislikeSelector: '.dislike'
});


  $('actions .like, .actions .dislike').clicl(function(e){
    e.preventDefault();
  $("#tinderslide").jTinder($(this).attr('class'));

  });
</script>

</body>
</html>
